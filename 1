#include <stdio.h>

int main()
{
    int arr[5];
    int x,a;
    printf("Enter the elements of the array[5]: ");
    for(int i = 0; i < 5; i++)
        {
        scanf("%d", &arr[i]);
        }

    for(int i = 0; i < 5; i++)
        {
        for(int j = i+1; j < 5; j++)
        {
            if(arr[i] < arr[j])
               {
                   a = arr[i];
                   arr[i] = arr[j];
                   arr[j] = a;
               }
        }
        }
    printf("Enter 0 for ascending or Enter 1 for descending: ");
    scanf("%d", &x);
    if(x == 0)
    {

        printf("The number in ascending order is: ");
        for(int i = 4; i >= 0; i--)
        {
            printf("%d ", arr[i]);
        }

    }
    else if(x == 1)
    {

        printf("The number in descending order is: ");
        for(int i = 0; i < 5; i++)
        {
            printf("%d ", arr[i]);
        }

    }


}
